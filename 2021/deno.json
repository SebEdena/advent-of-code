{
	"lint": {
		"files": {
			"include": [
				"src/"
			]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"files": {
			"include": [
				"src/"
			]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 120,
			"indentWidth": 4,
			"singleQuote": false,
			"proseWrap": "preserve"
		}
	}
}